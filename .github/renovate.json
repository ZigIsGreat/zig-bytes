{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Zig compiler version in build.zig and flake.nix",
      "fileMatch": [
        "^build.zig$"
      ],
      "matchStrings": [
        "const required_zig = \"(?<currentValue>.*?)\";\\n"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "ziglang/zig",
      "versioningTemplate": "semver-coerced"
    }
  ]
}
